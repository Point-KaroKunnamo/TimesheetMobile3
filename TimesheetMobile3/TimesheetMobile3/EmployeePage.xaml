<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimesheetMobile3.EmployeePage">
    <ContentPage.Content>
        <StackLayout>
            
            <Button Text="Load Employees" Clicked="LoadEmployees"></Button>
                <ListView Margin="30" x:Name="employeeList">
                    
                </ListView>
            <Image x:Name="employeeImage"  WidthRequest="100" HeightRequest="100" />
          <Button Text="List Work Assignments" Clicked="ListWorkAssignments"></Button>
            <Button x:Name="takePictureButton" Text="Take Picture" Clicked="TakeFoto" FontSize="20" />

            <Image x:Name="FotoImage" WidthRequest="100" HeightRequest="100" />
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>